CREATE TABLE IF NOT EXISTS language(
languageName VARCHAR(30) PRIMARY KEY NOT NULL
);
CREATE TABLE IF NOT EXISTS location(
locationName VARCHAR(30) PRIMARY KEY NOT NULL,
visited BOOLEAN,
is_sight_seeing_location BOOLEAN
);
CREATE TABLE IF NOT EXISTS route(
routeName VARCHAR(30)) PRIMARY KEY NOT NULL,
complete BOOLEAN,
routeImagePath VARCHAR(30) NOT NULL
);
CREATE TABLE IF NOT EXISTS route_location_cross_reference(
routeName VARCHAR(30) NOT NULL,
locationName VARCHAR(30) NOT NULL,
FOREIGN KEY(routeName) REFERENCES route(routeName),
FOREIGN KEY(locationName) REFERENCES location(locationName)
);
CREATE TABLE IF NOT EXISTS data_element(
path VARCHAR(30) PRIMARY KEY NOT NULL,
data_type VARCHAR(30) NOT NULL,
location VARCHAR(30) NOT NULL,
language VARCHAR(30) NOT NULL,
FOREIGN KEY(location) REFERENCES location(locationName),
FOREIGN KEY(language) REFERENCES language(languageName)
);
CREATE TABLE IF NOT EXISTS gps_coordinate(
id INTEGER PRIMARY KEY AUTOINCREMENT,
latitude REAL NOT NULL,
longitude REAL NOT NULL,
location VARCHAR(30) NOT NULL,
FOREIGN KEY(location) REFERENCES location(locationName)
);
CREATE TABLE IF NOT EXISTS user_settings(
settingsId INT PRIMARY KEY,
language VARCHAR(30) NOT NULL,
route VARCHAR(30),
FOREIGN KEY(language) REFERENCES language(languageName),
FOREIGN KEY(route) REFERENCES route(routeName)
);